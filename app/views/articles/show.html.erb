<div class="container-fluid" id="article-show">
  <div class="row justify-content-md-center lh-lg">
    <div class="col-md-11 col-lg-8 col-xl-9 px-lg-5" id="article-body">
      <p class="text-center mt-5 mb-0"><%= "日付: #{@article.created_at}" %></p>
      <h1 class="text-center mt-0 pb-5"><%= @article.title %></h1>
      <%= "#{parse_markdown(string: ((render "#{@article.id}.md.erb")), escape_html: false)}".html_safe %>
      <div class="mt-5 py-5 g-0 d-flex justify-content-md-around">
      </div>
    </div>
    <%= render "footer_navigation" %>
  </div>
</div>