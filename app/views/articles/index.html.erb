<aside id="filter" class="d-lg-block">
  <div class="tags">
    <p class="filter-header">Tags</p>
    <nav>
      <ul>
        <% @tags.each do |tag| %>
          <span class="filter-item">
            <a href="?tag=<%= tag %>" class="badge rounded-pill mx-1 article-tag-<%= tag %>"><%= tag %></a>
          </span>
        <% end %>
      </ul>
    </nav>
  </div>

  <div class="archives">
    <p class="filter-header">Archives</p>
    <nav>
      <ul>
        <li class="filter-item">
          <a href="?date=2020-04">2020-04</a>
        </li>
        <li class="filter-item">
          <a href="?date=2020-03">2020-03</a>
        </li>
        <li class="filter-item">
          <a href="?date=2020-02">2020-02</a>
        </li>
        <li class="filter-item">
          <a href="?date=2020-01">2020-01</a>
        </li>
      </ul>
    </nav>
  </div>
</aside>

<aside id="burger" class="d-block d-lg-none">
  <div></div>
  <div></div>
  <div></div>
</aside>

<div class="container" id="articles-index">
  <% @articles.each do |article| %>
    <% id, article = article%>
    <div class="row justify-content-md-center gx-0 mb-5">
      <div class="col-md-8 col-lg-6 mx-md-3 article-description">
        <span class="publish-date"><%= "#{article.created_at}" %></span>
        <p>
          <%= link_to article.title, "#{articles_path}/#{article.id.to_s}", class: "article-title" %>
        </p>
      </div>
    </div>
  <% end %>
</div>