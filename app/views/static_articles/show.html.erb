<div class="card bg-light mb-3 mt-3 shadow w-75 mx-auto pt-5 px-5 pb-5">
  <div id="show-article" class="mt-3 mx-5 px-3">
    <%= image_tag @article[:hero_image], class: "img-fluid mx-auto mb-3 rounded shadow", width: "900" %>
    <h1 class="card-title mb-3 pb-3 border-bottom"><%= @article[:title] %></h1>
    <p class="text-muted">更新日: <%= get_modified_date(__FILE__) %></p>
    <%= render "article#{params[:id]}" %>
  </div>
</div>
<%= render "footer_navigation" %>