<div class="container-fluid p-0 m-0">
  <%# image %>
  <div class="row">
    <div class="col hero-container">
      <%= image_tag @article[:hero_image], id: "article-hero" %>
    </div>
  </div>
  <div class="row mx-3 mx-md-5">
    <h1 class="col"><%= @article[:title] %></h1>
  </div>
  <div class="row mx-3 mx-md-5">
    <p class="text-muted">更新日: <%= get_modified_date(__FILE__) %></p>
  </div>
  <div class="row mx-3 mx-md-5">
    <%= render "article#{params[:id]}" %>
  </div>
</div>