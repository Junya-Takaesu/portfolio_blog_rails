<div class="card mb-3 mt-3 shadow w-75 mx-auto pt-5 px-5 pb-5">
  <div class="mt-3 mx-5 px-3">
    <%= image_tag @articles[params[:id].to_i-1][:hero_image], class: "img-fluid mx-auto rounded shadow", width: "900" %>
    <h1 class="card-title mb-3 border-bottom"><%= @articles[params[:id].to_i-1][:title] %><small class="text-muted fs-6">更新日: <%= get_modified_date(__FILE__) %></small></h1>
    <%= render "article#{params[:id]}" %>
  </div>
</div>