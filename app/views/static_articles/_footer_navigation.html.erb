<div class="col-6 col-md-5 d-flex">
  <% if 0 < params[:id].to_i-1 %>
    <%= link_to "<<< 前の記事: #{@articles[params[:id].to_i-2][:title]}", "#{params[:id].to_i-1}", class: "btn btn-outline-warning col-12", role: "button" %>
  <% else %>
    <a class="btn btn-outline-secondary col-12 disabled" href="#">記事がありません</a>
  <% end%>
</div>

<div class="col-6 col-md-5 d-flex">
  <% if params[:id].to_i+1 <= @articles.length %>
    <%= link_to "次の記事: #{@articles[params[:id].to_i][:title]} >>>", "#{params[:id].to_i+1}", class: "btn btn-outline-warning col-12", role: "button" %>
  <% else %>
    <a class="btn btn-outline-secondary col-12 disabled" href="#">記事がありません</a>
  <% end %>
</div>